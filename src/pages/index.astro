---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Retrograde">
  <Navbar />
  <div class="container">
    <img src="../assets/bgwebsitwtail.png" alt="" />
    <h1>Welcome<br /> to</h1>
  </div>
</Layout>

<style>
  .container h1 {
    color: #000000;
    text-shadow: 0 0 10px #000;
    text-align: left;
    position: absolute;
    margin-top: 20%;
    left: 25vw;
    font-size: 9vw;
    line-height: 7vw;
    transform: translate(-50%, -50%);
    /* set the z-index to 1 */
    z-index: 1;
  }
  .container img {
    text-align: center;
    position: absolute;

    width: 100%;

    /* set the z-index to 1 */
    z-index: -1;
  }
</style>
