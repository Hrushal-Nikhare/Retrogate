---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Retrograde">
  <Navbar />
  <div class="container">
    <img src="../assets/bgwebsitwtail.png" alt="" />
    <h1>
      Welcome<br /> To
      <font color="red">Personality.</font>
    </h1>
    TEST
  </div>
</Layout>

<style>
  .container h1 {
    color: #000000;
    text-shadow: 0 0 10px #000;
    text-align: left;
    position: relative;
    margin-top: 5%;
    left: 1vw;
    font-size: 13vw;
    line-height: 11vw;

    /* set the z-index to 1 */
    z-index: 1;
  }

  .container img {
    text-align: center;
    position: absolute;
    margin-top: -5%;
    width: 100%;

    /* set the z-index to 1 */
    z-index: -1;
  }
</style>
