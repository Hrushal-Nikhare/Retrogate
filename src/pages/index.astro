---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Retrograde">
  <div class="topbar"><font size="5"> Retrograde</font></div>
  <main>
    <div class="content">
      <p>
        <br />
        <h1>Welcome</h1>
      </p>
      <p>
        <h1>To</h1>
      </p>
      <br /><br /><br /><br />
    </div>
  </main>
</Layout>

<style>
  main {
    scrollbar-width: thin;
    scrollbar-color: var(--thumbBG) var(--scrollbarBG);
  }

  main::-webkit-scrollbar-track {
    background: var(--scrollbarBG);
  }
  main::-webkit-scrollbar-thumb {
    background-color: var(--thumbBG);
    border-radius: 6px;
    border: 3px solid var(--scrollbarBG);
  }
  h1 {
    font-size: 1750%;
    font-weight: 100;
    margin: 0;
    line-height: 18rem;
  }
  .topbar {
    position: fixed;
    width: 101%;
    height: auto;
    margin-left: -0.5%;
    margin-right: 0%;
    margin-top: -1%;
    align-items: stretch;
    padding: 1em;
    background: #264d5b;
  }
  .content {
    width: auto;
    height: 100%;
    margin-left: var(--pad);
    margin-right: var(--pad);
    padding-bottom: 0%;
    margin-top: 0%;
    align-items: center;
    background-image: url("/assets/bgwebsitwtail.png");
    background-repeat: no-repeat;
    background-size: 100%;
    background-color: #264d5b;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
